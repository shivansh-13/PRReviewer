{
  "manifest_version": 3,
  "name": "ADO PR Reviewer - AI Code Review",
  "version": "1.0.0",
  "description": "AI-powered code review for Azure DevOps Pull Requests using Google Gemini",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://dev.azure.com/*",
    "https://*.visualstudio.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://dev.azure.com/*/pullrequest/*",
        "https://*.visualstudio.com/*/pullrequest/*",
        "https://dev.azure.com/*/_git/*/pullrequest/*",
        "https://*.visualstudio.com/*/_git/*/pullrequest/*"
      ],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "content/content.js", "content/content.css"],
      "matches": ["https://dev.azure.com/*", "https://*.visualstudio.com/*"]
    }
  ]
}
